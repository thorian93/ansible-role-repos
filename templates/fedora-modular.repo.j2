[fedora-modular]
name=Fedora Modular $releasever - $basearch
#baseurl={{ repos_transport_protocol }}://{{ repos_fedora_base_host }}/pub/fedora/linux/releases/$releasever/Modular/$basearch/os/
metalink={{ repos_transport_protocol }}://{{ repos_fedora_mirrors_host }}/metalink?repo=fedora-modular-$releasever&arch=$basearch
enabled=1
countme=1
#metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False


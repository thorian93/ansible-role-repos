[updates-testing-modular]
name=Fedora Modular $releasever - $basearch - Test Updates
#baseurl={{ repos_transport_protocol }}://{{ repos_fedora_base_host }}/pub/fedora/linux/updates/testing/$releasever/Modular/$basearch/
metalink={{ repos_transport_protocol }}://{{ repos_fedora_mirrors_host }}/metalink?repo=updates-testing-modular-f$releasever&arch=$basearch
enabled=0
countme=1
repo_gpgcheck=0
type=rpm
gpgcheck=1
metadata_expire=6h
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False

